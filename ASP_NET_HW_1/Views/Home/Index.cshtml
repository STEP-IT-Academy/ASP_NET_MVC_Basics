@using ASP_NET_HW_1.Models.Bets.Football;
@model IEnumerable<GameSchedule>

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Дата встречи</th>
                    <th scope="col">Домашняя команда</th>
                    <th scope="col">Гостевая команда</th>
                    <th scope="col">Стадион</th>
                    <th scope="col">П1</th>
                    <th scope="col">Х</th>
                    <th scope="col">П2</th>
                    <th scope="col">Ставка</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@schedule.GameDate.ToShortDateString()</td>
                        <td>@schedule.HomeTeamName</td>
                        <td>@schedule.GuestTeamName</td>
                        <td>@schedule.StadiumName</td>
                        <td>@schedule.HomeTeamCoefficient</td>
                        <td>@schedule.DrawCoefficient</td>
                        <td>@schedule.GuestTeamCoefficient</td>
                        <td><a href="/Home/MakeBet?Id=@schedule.Id" class="btn btn-warning btn-sm" role="button" aria-pressed="true">Выбрать</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>